<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/download_background"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/tv_versions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="#0C5FAD"
            android:textSize="10sp"
            android:text="当前版本" />

        <TextView
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_versions"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="186dp"
            android:text=""
            android:textColor="#323232"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/progress_horizontal_color"
            style="@style/progressBarHorizontal_color"
            android:layout_width="200dip"
            android:layout_height="10dip"
            android:layout_alignTop="@+id/hint"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:indeterminate="true"
            android:max="100"
            android:progress="0"
             />

    </RelativeLayout>
</LinearLayout>
